extends ../default

block content
  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['sixteen', 'wide', 'column'])
      h1(class=['ui','header','blue', 'dividing'])= 'Lista de Usuario'

      table(class=['ui', 'table', 'celled'] id='tbl-usuario')
        thead
          tr
            th= 'Cédula'
            th= 'Nombre'
            th= 'Apellidos'
            th= 'Telefono'
            th= 'Dirección'
            th= 'Email'
            th= 'Rol'
            th= 'Acciones'
        tbody
          each usuarios in usuario
            tr
              td(id='identificador')= usuarios.ID_USUARIO
              td= usuarios.NOMBRE
              td= usuarios.APELLIDOS
              td= usuarios.TELEFONO
              td= usuarios.DIRECCION
              td= usuarios.EMAIL
              td= usuarios.DESCRIPCION
              td
                a(class=['ui button basic icon'] href='#' data-tooltip='Eliminar' data-position = 'top center' id='btn-eliminar')
                  i(class=['trash icon'])

                a(class=['ui button basic icon'] href='#' data-tooltip='Editar' data-position = 'top center' id='btn-editar')
                  i(class=['edit icon'])

  script(src='/javascripts/usuarios.js')